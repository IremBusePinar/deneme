<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <!--navbar-->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">İBP</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @*<a class="nav-link active" aria-current="page" href="#">Ana Yemekler</a>*@
                        @Html.ActionLink("Ana Yemekler", "Index", "AnaYemekler", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @*<a class="nav-link" href="#">Tatlılar</a>*@
                        @Html.ActionLink("Tatlılar", "Index", "Tatlılar", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @*<a class="nav-link" href="#">İçecekler</a>*@
                        @Html.ActionLink("İçecekler", "Index", "İçecekler", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @*<a class="nav-link" href="#">Salata ve Meze</a>*@
                        @Html.ActionLink("Salata ve Mezeler", "Index", "SalataveMeze", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Hakkımda</a>
                    </li>
                   
                </ul>

              
            </div>
        </div>
    </nav>
    <div class="container"> @RenderBody()</div>
    <<!--content-->

